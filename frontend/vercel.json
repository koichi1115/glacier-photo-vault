{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://glacier-photo-vault-backend.onrender.com/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "buildCommand": "cd ../shared && npm install && npm run build && cd ../frontend && npm install && npm run build",
    "outputDirectory": "dist",
    "framework": "vite"
}